<%- include('../partials/header') %>


        <div class="row margin-form ">
            <div class="col-6  bg-info mx-auto mt-5 mb-5 p-3">
                <form action="/movies/<%=foundMovie._id%>?_method=PATCH" method="POST">
                    <div class="mb-3">
                        <label for="naam" class="form-label">Name: </label>
                        <input type="text" class="form-control" name="name" id="naam" placeholder="Name of Movie"
                            value="<%=foundMovie.name%>">
                    </div>
                    <div class="mb-3">
                        <label for="imge" class="form-label">Image Url: </label>
                        <input type="text" class="form-control" name="img" id="imge" placeholder="Image URL of Movie"
                            value="<%=foundMovie.img%>">
                    </div>
                    <div class="mb-3">
                        <label for="paisa" class="form-label">Price: </label>
                        <div class="input-group mb-3">
                            <input class="form-control" type="number" name="year" id="paisa"
                                placeholder="Release Year of Movie" value="<%=foundMovie.year%>">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="des" class="form-label">Description: </label>
                        <textarea class="form-control" name="desc" id="des" rows="5"
                            placeholder="Description of Product"><%=foundMovie.desc%></textarea>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success">Save Changes</button>
                </form>
            </div>
        </div>


        <%- include('../partials/footer') %>